@model IEnumerable<ProjetoAna.Models.Pagamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataLimite)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Pago)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataLimite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.Pago)
            </td>  
            <td>
                <a asp-action="Edit" asp-route-id="@item.DataLimite">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DataLimite">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DataLimite">Delete</a>
                <a asp-action="Edit" asp-route-id="@item.Valor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Valor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Valor">Delete</a>
                <a asp-action="Edit" asp-route-id="@item.Pago">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Pago">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Pago">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

