@model IEnumerable<ProjetoAna.Models.TipoDePagamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDoCobrado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InformacoesAdicionais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeDoCobrado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InformacoesAdicionais)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NomeDoCobrado">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InformacoesAdicionais">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>